<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CornerCut">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>
    <style name="shape_able_image" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginTop">@dimen/_35sdp</item>
        <item name="android:textColor">@color/textBoldColor</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="text_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_light_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>
    <style name="text_light_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_small_light_color</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>


    </style>

    <style name="buttonstyle">
        <item name="android:background">@drawable/gradient_btn_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>


    </style>

    <style name="edit_text_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
    </style>

    <style name="linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:background">@drawable/edit_text_line</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="checkBoxTextColor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/checkboxTextcolor</item>
        <item name="android:paddingHorizontal">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/poppins</item>

        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

</resources>