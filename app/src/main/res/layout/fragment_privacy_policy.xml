<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/layout_background_color"
    tools:context=".views.fragments.mainFragments.PrivacyPolicyFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
      <View
          android:id="@+id/view_bg"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:background="@drawable/background_image"
          app:layout_constraintDimensionRatio="1:0.70"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          app:layout_constraintDimensionRatio="H,5:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

         <ImageView
             android:id="@+id/btn_drawer"
             android:layout_width="@dimen/_35sdp"
             android:layout_height="@dimen/_35sdp"
             android:src="@drawable/back_button_bag"
             app:layout_constraintBottom_toBottomOf="@+id/textView"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="@dimen/_18sdp"
             app:layout_constraintTop_toTopOf="@+id/textView" />
         <ImageView
             android:layout_width="@dimen/_12sdp"
             android:layout_height="@dimen/_12sdp"
             android:src="@drawable/btn_back"
             app:layout_constraintTop_toTopOf="@id/btn_drawer"
             app:layout_constraintBottom_toBottomOf="@id/btn_drawer"
             app:layout_constraintStart_toStartOf="@id/btn_drawer"
             app:layout_constraintEnd_toEndOf="@id/btn_drawer"
             />

         <TextView
             android:id="@+id/textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_25sdp"
             android:fontFamily="@font/poppins_bold"
             android:text="@string/privacy_policy"
             android:textColor="@color/white"
             android:textSize="@dimen/_14ssp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <LinearLayout
          android:id="@+id/Linear_bg"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginHorizontal="@dimen/_12sdp"
          android:layout_marginTop="@dimen/_100sdp"
          android:layout_marginBottom="@dimen/_10sdp"
          android:paddingBottom="@dimen/_50sdp"
          android:background="@drawable/ic_background_shape"
          android:orientation="vertical"
          android:paddingHorizontal="@dimen/_10sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

         <LinearLayout
             android:id="@+id/Accounts_name_linear"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="@dimen/_18sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:orientation="vertical">
            <ImageView
                android:id="@+id/Solda_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_image" />
            <TextView
                android:id="@+id/Choose_your_plan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/privacy_policy"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/privacy_paragraph_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/privacypolicy"
                android:textColor="@color/grey_text_colorr"
                android:textSize="@dimen/_10ssp" />

         </LinearLayout>

      </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>